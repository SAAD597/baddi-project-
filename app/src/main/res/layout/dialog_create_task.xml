<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    
    <!-- Titre de la tâche -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titre de la tâche *"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="#3498DB"
        app:hintTextColor="#3498DB">
        
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLines="2" />
    </com.google.android.material.textfield.TextInputLayout>
    
    <!-- Description de la tâche -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="#3498DB"
        app:hintTextColor="#3498DB">
        
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:lines="4"
            android:gravity="top|start"
            android:scrollbars="vertical" />
    </com.google.android.material.textfield.TextInputLayout>
    
    <!-- Assignation -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assigné à (optionnel)"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="#3498DB"
        app:hintTextColor="#3498DB">
        
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTaskAssignedTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>
    
    <!-- Sélection de la priorité -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priorité"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="8dp" />
    
    <RadioGroup
        android:id="@+id/radioPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <RadioButton
            android:id="@+id/radioPriorityLow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Basse"
            android:textColor="#3498DB" />
        
        <RadioButton
            android:id="@+id/radioPriorityMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Moyenne"
            android:textColor="#F39C12"
            android:checked="true" />
        
        <RadioButton
            android:id="@+id/radioPriorityHigh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Haute"
            android:textColor="#E74C3C" />
    </RadioGroup>
    
    <!-- Note d'information -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Champ obligatoire"
        android:textSize="12sp"
        android:textColor="#95A5A6"
        android:textStyle="italic" />
</LinearLayout>